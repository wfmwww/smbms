<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!--自动扫描包的配置-->
    <context:component-scan base-package="cn.smbms.controller"/>
    <!--mapping:将静态资源映射到指定的路径下
   location:本地静态资源文件所在的目录 **代表其下的目录以及子目录-->
    <mvc:resources mapping="/statics/**" location="/statics/"/>
    <!--<mvc:default-servlet-handler/>-->
    <!--基于注解的处理器-->
    <mvc:annotation-driven conversion-service="myConversionService">
        <!--装配消息转换器StringHttpMessageConverter，设置字符编码为UTF-8-->
        <mvc:message-converters>
            <bean class="org.springframework.http.converter.StringHttpMessageConverter">
                <property name="supportedMediaTypes">
                    <list>
                        <value>application/json;charset=UTF-8</value>
                    </list>
                </property>
            </bean>
            <!--fastJson日期格式转换器-->
            <bean class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter">
                <property name="supportedMediaTypes">
                    <list>
                        <value>text/html;charset=UTF-8</value>
                        <value>application/json</value>
                    </list>
                </property>
                <property name="features">
                    <list>
                        <value>WriteDateUseDateFormat</value>
                    </list>
                </property>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>
    <!--自定义的转换器配置-->
    <bean id="myConversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <list>
                <bean class="cn.smbms.util.StringToDateConverter">
                    <constructor-arg type="java.lang.String" value="yyyy-MM-dd"/>
                </bean>
            </list>
        </property>
    </bean>


    <!--配置多视图解析器：允许同样的内容展现不同的view-->
    <bean class="org.springframework.web.servlet.view.ContentNegotiatingViewResolver">
        <!--表示对参数匹配的支持，默认为true-->
        <property name="favorParameter" value="true"/>
        <property name="defaultContentType" value="text/html"/>
        <property name="mediaTypes">
            <map>
                <entry key="html" value="text/html;charset=UTF-8"/>
                <entry key="json" value="application/json;charset=UTF-8"/>
                <entry key="xml" value="application/xml;charset=UTF-8"/>
            </map>
        </property>
        <!--配置网页的视图解析器-->
        <property name="viewResolvers">
            <list>
                <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver" >
                    <property name="prefix" value="/WEB-INF/jsp/"/>
                    <property name="suffix" value=".jsp"/>
                </bean>
            </list>
        </property>
    </bean>

     <!--配置拦截器-interceptors-->
    <mvc:interceptors>
        <mvc:interceptor>
            <!--拦截哪些路径-->
            <mvc:mapping path="/sys/**"/>
            <!--不拦截哪些路径-->
            <mvc:exclude-mapping path="/statics/**"/>
            <bean class="cn.smbms.interceptor.SysIntercept"></bean>
        </mvc:interceptor>
    </mvc:interceptors>

    <!-- 配置MultipartResolver，用于上传文件，使用spring的CommonsMultipartResolver -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="5000000"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>


    <!--全局异常配置-->
    <bean class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <props>
                <prop key="java.lang.RuntimeException">error</prop>
            </props>
        </property>
    </bean>

    <!-- 自定义异常处理类 -->
    <bean class="cn.smbms.exception.ExpcetionResolver"></bean>


</beans>